{
  "project_name": "nobody-knows",
  "project_type": "long_series",
  "description": "A 100-episode educational podcast series exploring complex topics with intellectual humility",
  "created_at": "2025-08-10T00:00:00",
  
  "episode_configuration": {
    "target_episodes": 100,
    "episode_duration": 27,
    "episodes_per_season": 10,
    "total_seasons": 10,
    "release_schedule": "weekly"
  },
  
  "content_specifications": {
    "complexity_progression": true,
    "seasonal_themes": {
      "season_1": "Foundations of Knowledge",
      "season_2": "The Natural World",
      "season_3": "Human Mind and Behavior",
      "season_4": "Technology and Innovation",
      "season_5": "Society and Culture",
      "season_6": "The Universe and Beyond",
      "season_7": "Life Sciences",
      "season_8": "Philosophy and Ethics",
      "season_9": "Future Frontiers",
      "season_10": "Synthesis and Reflection"
    },
    "episode_structure": {
      "introduction": 1.5,
      "main_segments": 3,
      "segment_duration": 8,
      "conclusion": 1.5
    }
  },
  
  "brand_voice": {
    "intellectual_humility": true,
    "tone": ["curious", "thoughtful", "engaging", "accessible"],
    "key_phrases": [
      "Nobody knows for certain",
      "Current understanding suggests",
      "Evidence points to",
      "It's fascinating to consider",
      "What we're learning"
    ],
    "avoid": ["absolutist", "condescending", "overly technical", "dogmatic"]
  },
  
  "quality_thresholds": {
    "comprehension": 0.85,
    "brand_consistency": 0.90,
    "engagement": 0.80,
    "technical": 0.85,
    "overall_minimum": 0.85
  },
  
  "production_settings": {
    "research_depth": "comprehensive",
    "fact_checking": true,
    "multiple_perspectives": true,
    "source_diversity": 10,
    "automation_level": "full"
  },
  
  "cost_management": {
    "budget_per_episode": 8.00,
    "total_budget": 800.00,
    "priority_level": "high",
    "cost_optimization": true,
    "api_limits": {
      "perplexity_per_episode": 5.00,
      "elevenlabs_per_episode": 2.00,
      "claude_per_episode": 1.00
    }
  },
  
  "audio_configuration": {
    "voice_provider": "elevenlabs",
    "voice_id": "default",
    "model": "eleven_v3_turbo",
    "voice_settings": {
      "stability": 0.75,
      "similarity_boost": 0.85,
      "style": 0.5,
      "use_speaker_boost": true
    },
    "output_format": "mp3",
    "bitrate": "128k",
    "sample_rate": 44100
  },
  
  "monitoring": {
    "track_quality_metrics": true,
    "track_cost_per_episode": true,
    "track_production_time": true,
    "generate_reports": true,
    "alert_on_quality_fail": true,
    "alert_on_cost_overrun": true
  },
  
  "distribution": {
    "platforms": ["website", "spotify", "apple_podcasts", "google_podcasts"],
    "metadata_generation": true,
    "automatic_transcription": true,
    "seo_optimization": true
  }
}