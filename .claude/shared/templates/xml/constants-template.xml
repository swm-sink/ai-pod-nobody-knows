<?xml version="1.0" encoding="UTF-8"?>
<document type="constants" domain="{DOMAIN}" version="3.0" xmlns="https://ai-podcasts-nobody-knows.com/claude-docs">
    <metadata>
        <title>{TITLE}</title>
        <claude-optimization>true</claude-optimization>
    </metadata>
    
    <content>
        <section type="constants" id="primary-constants">
            <technical-explanation>
                {TECHNICAL_DESCRIPTION}
                
                Should define:
                - System-wide configuration values
                - Quality thresholds and limits  
                - API endpoints and constraints
                - File naming conventions
                - Validation criteria
            </technical-explanation>
            <simple-explanation>
                {SIMPLE_DESCRIPTION}
                
                Should explain:
                - What these values control
                - Why they're set to these specific values
                - When you might need to reference them
            </simple-explanation>
            
            <constants>
                <constant>
                    <name>{CONSTANT_NAME_1}</name>
                    <value>{CONSTANT_VALUE_1}</value>
                    <description>{CONSTANT_DESCRIPTION_1}</description>
                </constant>
                <constant>
                    <name>{CONSTANT_NAME_2}</name>
                    <value>{CONSTANT_VALUE_2}</value>
                    <description>{CONSTANT_DESCRIPTION_2}</description>
                </constant>
                <!-- Add more constants as needed -->
            </constants>
        </section>
        
        <section type="constants" id="quality-gates">
            <technical-explanation>
                Quality assurance thresholds and validation criteria for automated systems.
            </technical-explanation>
            <simple-explanation>
                The standards that determine if something is "good enough" to proceed.
            </simple-explanation>
            
            <constants>
                <constant>
                    <name>QUALITY_THRESHOLD</name>
                    <value>{QUALITY_VALUE}</value>
                    <description>Minimum quality score required for acceptance</description>
                </constant>
                <!-- Add quality-related constants -->
            </constants>
            
            <validation>
                <validation-command>{QUALITY_CHECK_COMMAND}</validation-command>
                <success-criteria>All values within acceptable ranges</success-criteria>
            </validation>
        </section>
        
        <section type="constants" id="system-limits">
            <technical-explanation>
                System resource limits, timeouts, and operational constraints.
            </technical-explanation>
            <simple-explanation>
                Boundaries that keep the system running smoothly and prevent resource exhaustion.
            </simple-explanation>
            
            <constants>
                <constant>
                    <name>MAX_RETRIES</name>
                    <value>{MAX_RETRY_VALUE}</value>
                    <description>Maximum number of retry attempts before failure</description>
                </constant>
                <constant>
                    <name>TIMEOUT_SECONDS</name>
                    <value>{TIMEOUT_VALUE}</value>
                    <description>Maximum time to wait for operation completion</description>
                </constant>
                <!-- Add system limit constants -->
            </constants>
        </section>
        
        <section type="constants" id="file-naming">
            <technical-explanation>
                Standardized file naming conventions and directory structures.
            </technical-explanation>
            <simple-explanation>
                Consistent naming rules so everyone knows where to find things.
            </simple-explanation>
            
            <constants>
                <constant>
                    <name>SESSION_FILENAME_PATTERN</name>
                    <value>{SESSION_PATTERN}</value>
                    <description>Template for session file naming</description>
                </constant>
                <!-- Add naming convention constants -->
            </constants>
        </section>
    </content>
    
    <cross-references>
        <reference file="{RELATED_GUIDE}.xml" section="implementation" type="related">
            Implementation guide that uses these constants
        </reference>
        <!-- Add references to documents that use these constants -->
    </cross-references>
</document>