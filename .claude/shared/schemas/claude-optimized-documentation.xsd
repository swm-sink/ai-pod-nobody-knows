<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="https://ai-podcasts-nobody-knows.com/claude-docs"
           xmlns:tns="https://ai-podcasts-nobody-knows.com/claude-docs"
           elementFormDefault="qualified">

  <!-- Root document element -->
  <xs:element name="document" type="tns:DocumentType"/>

  <!-- Document type definition -->
  <xs:complexType name="DocumentType">
    <xs:sequence>
      <xs:element name="metadata" type="tns:MetadataType"/>
      <xs:element name="content" type="tns:ContentType"/>
      <xs:element name="cross-references" type="tns:CrossReferencesType" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="type" type="tns:DocumentTypeEnum" use="required"/>
    <xs:attribute name="domain" type="tns:DomainEnum" use="required"/>
    <xs:attribute name="version" type="xs:string" use="required"/>
  </xs:complexType>

  <!-- Document type enumeration -->
  <xs:simpleType name="DocumentTypeEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="learning-guide"/>
      <xs:enumeration value="reference"/>
      <xs:enumeration value="constants"/>
      <xs:enumeration value="navigation"/>
      <xs:enumeration value="template"/>
      <xs:enumeration value="framework"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Domain enumeration -->
  <xs:simpleType name="DomainEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="foundation"/>
      <xs:enumeration value="ai-orchestration"/>
      <xs:enumeration value="operations"/>
      <xs:enumeration value="claude-code"/>
      <xs:enumeration value="quality"/>
      <xs:enumeration value="elevenlabs"/>
      <xs:enumeration value="prompts-research"/>
      <xs:enumeration value="shared"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Metadata type -->
  <xs:complexType name="MetadataType">
    <xs:sequence>
      <xs:element name="title" type="xs:string"/>
      <xs:element name="phase" type="tns:PhaseEnum" minOccurs="0"/>
      <xs:element name="skill-level" type="tns:SkillLevelEnum" minOccurs="0"/>
      <xs:element name="claude-optimization" type="xs:boolean" default="true"/>
      <xs:element name="learning-outcomes" type="tns:LearningOutcomesType" minOccurs="0"/>
      <xs:element name="prerequisites" type="tns:PrerequisitesType" minOccurs="0"/>
      <xs:element name="estimated-time" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Phase enumeration -->
  <xs:simpleType name="PhaseEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="walk"/>
      <xs:enumeration value="crawl"/>
      <xs:enumeration value="run"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Skill level enumeration -->
  <xs:simpleType name="SkillLevelEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="beginner"/>
      <xs:enumeration value="intermediate"/>
      <xs:enumeration value="advanced"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Learning outcomes type -->
  <xs:complexType name="LearningOutcomesType">
    <xs:sequence>
      <xs:element name="outcome" type="xs:string" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Prerequisites type -->
  <xs:complexType name="PrerequisitesType">
    <xs:sequence>
      <xs:element name="prerequisite" type="xs:string" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Content type -->
  <xs:complexType name="ContentType">
    <xs:sequence>
      <xs:element name="section" type="tns:SectionType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Section type -->
  <xs:complexType name="SectionType">
    <xs:sequence>
      <xs:element name="technical-explanation" type="xs:string" minOccurs="0"/>
      <xs:element name="simple-explanation" type="xs:string" minOccurs="0"/>
      <xs:element name="instructions" type="tns:InstructionsType" minOccurs="0"/>
      <xs:element name="examples" type="tns:ExamplesType" minOccurs="0"/>
      <xs:element name="validation" type="tns:ValidationType" minOccurs="0"/>
      <xs:element name="constants" type="tns:ConstantsType" minOccurs="0"/>
      <xs:element name="navigation-links" type="tns:NavigationLinksType" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="type" type="tns:SectionTypeEnum" use="required"/>
    <xs:attribute name="id" type="xs:string" use="optional"/>
  </xs:complexType>

  <!-- Section type enumeration -->
  <xs:simpleType name="SectionTypeEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="introduction"/>
      <xs:enumeration value="implementation"/>
      <xs:enumeration value="reference"/>
      <xs:enumeration value="examples"/>
      <xs:enumeration value="troubleshooting"/>
      <xs:enumeration value="advanced"/>
      <xs:enumeration value="navigation"/>
      <xs:enumeration value="constants"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Instructions type -->
  <xs:complexType name="InstructionsType">
    <xs:sequence>
      <xs:element name="step" type="tns:StepType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Step type -->
  <xs:complexType name="StepType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="number" type="xs:integer" use="optional"/>
        <xs:attribute name="validation-command" type="xs:string" use="optional"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <!-- Examples type -->
  <xs:complexType name="ExamplesType">
    <xs:sequence>
      <xs:element name="example" type="tns:ExampleType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Example type -->
  <xs:complexType name="ExampleType">
    <xs:sequence>
      <xs:element name="scenario" type="xs:string"/>
      <xs:element name="implementation" type="xs:string"/>
      <xs:element name="explanation" type="xs:string" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="type" type="tns:ExampleTypeEnum" use="optional"/>
  </xs:complexType>

  <!-- Example type enumeration -->
  <xs:simpleType name="ExampleTypeEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="basic"/>
      <xs:enumeration value="intermediate"/>
      <xs:enumeration value="advanced"/>
      <xs:enumeration value="anti-pattern"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Validation type -->
  <xs:complexType name="ValidationType">
    <xs:sequence>
      <xs:element name="validation-command" type="xs:string" maxOccurs="unbounded"/>
      <xs:element name="success-criteria" type="xs:string" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Constants type -->
  <xs:complexType name="ConstantsType">
    <xs:sequence>
      <xs:element name="constant" type="tns:ConstantType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Constant type -->
  <xs:complexType name="ConstantType">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="value" type="xs:string"/>
      <xs:element name="description" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Navigation links type -->
  <xs:complexType name="NavigationLinksType">
    <xs:sequence>
      <xs:element name="link" type="tns:LinkType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Link type -->
  <xs:complexType name="LinkType">
    <xs:sequence>
      <xs:element name="title" type="xs:string"/>
      <xs:element name="file" type="xs:string"/>
      <xs:element name="description" type="xs:string" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="priority" type="tns:PriorityEnum" use="optional"/>
  </xs:complexType>

  <!-- Priority enumeration -->
  <xs:simpleType name="PriorityEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="high"/>
      <xs:enumeration value="medium"/>
      <xs:enumeration value="low"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Cross-references type -->
  <xs:complexType name="CrossReferencesType">
    <xs:sequence>
      <xs:element name="reference" type="tns:ReferenceType" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Reference type -->
  <xs:complexType name="ReferenceType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="file" type="xs:string" use="required"/>
        <xs:attribute name="section" type="xs:string" use="optional"/>
        <xs:attribute name="type" type="tns:ReferenceTypeEnum" use="optional"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <!-- Reference type enumeration -->
  <xs:simpleType name="ReferenceTypeEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="prerequisite"/>
      <xs:enumeration value="related"/>
      <xs:enumeration value="advanced"/>
      <xs:enumeration value="example"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
