  "contextual_application_rules": {
    "introduction_section": {
      "preferred_tags": ["[excited]", "[confident]", "[curious]"],
      "avoid_tags": ["[concerned]", "[sighs]"],
      "rationale": "Set positive, engaging tone from start"
    },

    "main_content": {
      "preferred_tags": ["[thoughtful]", "[contemplative]", "[curious]"],
      "natural_elements": ["[pauses]", "[chuckles]"],
      "brand_alignment": ["[contemplative]"],
      "rationale": "Balance expertise with intellectual humility"
    },

    "conclusion_section": {
      "preferred_tags": ["[satisfied]", "[contemplative]", "[confident]"],
      "avoid_tags": ["[concerned]", "[excited]"],
      "rationale": "Close with reflection and measured confidence"
    },

    "technical_explanations": {
      "preferred_tags": ["[thoughtful]", "[confident]"],
