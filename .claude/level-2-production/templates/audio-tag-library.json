{
  "metadata": {
    "title": "ElevenLabs v3 Audio Tag Library",
    "version": "1.0.0", 
    "created": "2025-01-14",
    "description": "Contextual mapping library for ElevenLabs v3 audio tag application",
    "usage": "Referenced by 07_tts_optimizer for contextual audio tag injection"
  },

  "emotional_expression_tags": {
    "[excited]": {
      "description": "High energy, enthusiastic tone",
      "usage_contexts": [
        "Episode introductions",
        "Breakthrough discoveries", 
        "Exciting announcements",
        "Major revelations"
      ],
      "trigger_phrases": [
        "Welcome to",
        "Amazing discovery",
        "Breakthrough",
        "Incredible",
        "Fantastic news"
      ],
      "placement": "before_phrase",
      "frequency_limit": "1-2 per episode"
    },

    "[confident]": {
      "description": "Assured, authoritative delivery",
      "usage_contexts": [
        "Stating well-established facts",
        "Conclusions based on evidence",
        "Professional expertise sharing"
      ],
      "trigger_phrases": [
        "We know that",
        "Research shows",
        "Studies confirm", 
        "Evidence suggests",
        "It's clear that"
      ],
      "placement": "before_phrase", 
      "frequency_limit": "2-3 per episode"
    },

    "[curious]": {
      "description": "Inquisitive, questioning tone",
      "usage_contexts": [
        "Introducing questions",
        "Exploring unknowns",
        "Wondering about possibilities"
      ],
      "trigger_phrases": [
        "But what if",
        "Have you ever wondered", 
        "What would happen",
        "How might",
        "Could it be"
      ],
      "trigger_patterns": [
        "\\?",
        "What.*\\?",
        "How.*\\?", 
        "Why.*\\?",
        "When.*\\?"
      ],
      "placement": "before_question",
      "frequency_limit": "3-4 per episode"
    },

    "[contemplative]": {
      "description": "Thoughtful, reflective tone",
      "usage_contexts": [
        "Intellectual humility expressions",
        "Acknowledging uncertainties",
        "Deep thinking moments"
      ],
      "trigger_phrases": [
        "Nobody knows",
        "We don't fully understand",
        "Remains uncertain", 
        "Still exploring",
        "It's complicated"
      ],
      "brand_alignment": "high",
      "placement": "before_phrase",
      "frequency_limit": "4-5 per episode"
    },

    "[thoughtful]": {
      "description": "Deliberative, considering tone", 
      "usage_contexts": [
        "Complex explanations",
        "Weighing multiple perspectives",
        "Analytical discussions"
      ],
      "trigger_phrases": [
        "However",
        "On the other hand",
        "Consider this",
        "Let's think about", 
        "It's worth noting"
      ],
      "placement": "before_phrase",
      "frequency_limit": "3-4 per episode"
    },

    "[concerned]": {
      "description": "Worried or apprehensive tone",
      "usage_contexts": [
        "Discussing risks",
        "Addressing challenges",
        "Warning about issues"
      ],
      "trigger_phrases": [
        "Unfortunately",
        "The problem is",
        "We need to be careful",
        "This could be dangerous",
        "Warning"
      ],
      "placement": "before_phrase",
      "frequency_limit": "1-2 per episode"
    },

    "[sarcastic]": {
      "description": "Ironic or mocking inflection",
      "usage_contexts": [
        "Gentle humor",
        "Ironic observations", 
        "Light criticism"
      ],
      "trigger_phrases": [
        "Of course",
        "Obviously",
        "Naturally",
        "As if"
      ],
      "caution": "Use sparingly to maintain professional tone",
      "placement": "before_phrase",
      "frequency_limit": "0-1 per episode"
    }
  },

  "natural_speech_elements": {
