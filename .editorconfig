# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# 2 space indentation
[*.{js,json,yml,yaml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches multiple files with brace expansion notation
[*.{md,txt}]
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2