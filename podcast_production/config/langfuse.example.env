# LangFuse Observability Configuration
# Copy this file to .env and fill in your actual values

# Required: LangFuse API Credentials
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here

# Optional: LangFuse Host (defaults to cloud)
# For self-hosted installations, update this URL
LANGFUSE_HOST=https://cloud.langfuse.com

# Optional: Environment Configuration
ENVIRONMENT=production  # Options: development, staging, production
DEPLOYMENT_VERSION=2.0.0

# Optional: Disable observability for testing
# DISABLE_LANGFUSE=false

# Performance Tuning (optional)
# LANGFUSE_FLUSH_AT=10  # Batch size for observations
# LANGFUSE_FLUSH_INTERVAL=1  # Seconds between flushes
# LANGFUSE_MAX_RETRIES=3
# LANGFUSE_TIMEOUT=10

# Sampling Configuration (optional)
# LANGFUSE_SAMPLE_RATE=1.0  # 1.0 = 100%, 0.1 = 10% sampling
